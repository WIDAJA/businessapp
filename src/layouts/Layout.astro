---
import "@fontsource-variable/plus-jakarta-sans";
import { ViewTransitions } from "astro:transitions";
import GoToTop from "../components/Astro/GoToTop.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="MyBusinessApp es una software que ayuda a profesionalizar negocios cómo barberías, peluquerías, salones de belleza, etc. Entregan una amplia variedad de herramientas tales como: creación de negocios, trabajadores, servicios, agendamiento virtual y un espacio para los clientes donde pueden visualizar promociones, fotos de los trabajos realizados, agendar citas y demás."
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#16132C" />
		<title>{title}</title>

		<!-- open graph -->
		<meta property="og:title" content="..." />
		<meta property="og:description" content="..." />
		<meta property="og:image" content="/..." />
		<meta property="og:image:alt" content="..." />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<ViewTransitions />

		<style is:global>
			html {
				font-family: "Plus Jakarta Sans Variable", sans-serif;
				color-scheme: dark;
				scroll-behavior: smooth;
			}

			pre {
				font-family: "Plus Jakarta Sans Variable", sans-serif;
			}

			.size-services {
				height: calc(100vh - 2.5rem - 130px);
			}

			@media (prefers-color-scheme: dark) {
				body {
					background-image: url("assets/img/background-dark.svg");
					background-position: center;
					background-size: cover;
				}
			}
		</style>
	</head>
	<body class="dark:bg-primary bg-white min-h-screen">
		<slot />
		<GoToTop />
	</body>
</html>
