---
interface Props {
  id: string;
  href: string;
}

const { id, href } = Astro.props;
---

<a
  id={id}
  href={href}
  class="flex gap-2 items-center text-[17px] text-white border-b-[3px] border-transparent pb-1 cursor-pointer transition-all hover:border-b-accent"
>
  <slot name="before" />
  <slot />
</a>
