---
interface Props {
  id: string;
  name: string;
  type: any;
  title: string;
  placeholder: string;
}

const { id, name, title, type, placeholder } = Astro.props;
---

<div class="flex flex-col border-2 border-white/50 p-2">
  <label for={id}>{title}</label>
  <div class="flex gap-4 mt-2">
    <img src="/assets/icons/email.svg" alt="Icono de arroba" />
    <input
      id={id}
      name={name}
      type={type}
      placeholder={placeholder}
      required
      class="w-full h-10 bg-transparent focus:outline-none"
    />
  </div>
</div>
